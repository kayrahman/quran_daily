<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.chapterList.ChapterListFragment">

  <data>
    <variable
        name="viewModel"
        type="com.nkr.qurandaily.ui.fragment.chapterList.ChapterListViewModel" />
  </data>


  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_height="match_parent"
      android:layout_width="match_parent"
      >

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="false">

      <com.google.android.material.appbar.AppBarLayout
          android:id="@+id/app_bar"
          android:layout_width="match_parent"
          android:layout_height="300dp"
          android:theme="@style/AppTheme.AppBarOverlay">


        <include
            android:id="@+id/layout_header"
            layout="@layout/layout_header_quran_chapter_fragment"
            bind:viewModel ="@{viewModel}"
            />

      </com.google.android.material.appbar.AppBarLayout>


      <include
          android:id="@+id/chapter_list"
          layout="@layout/layout_quran_chapter_fragment_scrollable_list"
          bind:viewModel = "@{viewModel}"
          />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

  </androidx.constraintlayout.widget.ConstraintLayout>

</layout>